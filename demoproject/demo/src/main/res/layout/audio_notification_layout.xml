<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#80000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/audio_notify_videoid"
            android:text="cccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/audio_notify_close"
            android:src="@drawable/cancle"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/audio_notify_play_pause"
            android:layout_centerInParent="true"
            android:src="@drawable/audio_pause_icon"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/audio_notify_back_15s_view"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/audio_notify_play_pause"
            android:layout_marginRight="58dp"
            android:src="@drawable/audio_back_15s"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/audio_notify_forward_15s_view"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/audio_notify_play_pause"
            android:layout_marginLeft="58dp"
            android:src="@drawable/audio_forward_15s"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>


</LinearLayout>
